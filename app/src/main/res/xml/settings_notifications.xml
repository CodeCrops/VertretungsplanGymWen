<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:id="@+id/swNotificationMaster"
        android:defaultValue="true"
        android:key="@string/shared_preferences_settings_notifications_master"
        android:title="@string/settings_notification_master_title" />
    <PreferenceCategory android:title="Vibrationseinstellungen">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/shared_preferences_settings_notifications_vibration"
            android:title="@string/settings_notification_use_vibration" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Ton-Einstellungen">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/shared_preferences_settings_notification_sound"
            android:title="@string/settings_notification_use_sound" />
    </PreferenceCategory>
</PreferenceScreen>